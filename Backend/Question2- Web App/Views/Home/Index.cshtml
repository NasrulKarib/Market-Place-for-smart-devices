@model IEnumerable<Question2__Web_App.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: navy; font-family: Arial, sans-serif;">Customer Details</h1>

<p>
    <form asp-controller="Home" asp-action="Add_Customer" method="get" style="display: inline;">
        <button type="submit" style="background-color: green; color: white; border: none; padding: 10px 15px; border-radius: 5px; cursor: pointer;">
            Add Customer
        </button>
    </form>
</p>

<style>
    table.table tbody tr:hover {
        background-color: #f0f8ff; /* Light blue color */
        cursor: pointer; /* Changes the cursor to a pointer */
    }
</style>
<table class="table" style="border: 1px solid black; width: 100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Name)
              </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
                <td>
                    <form asp-controller="Home" asp-action="Update_Customer" asp-route-id="@item.Id" style="display: inline;">
                        <button type="submit" style="background-color: blue; color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;">Update</button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this customer?');" style="display: inline;">
                        <button type="submit" style="background-color: red; color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;">Delete</button>
                    </form>
                </td>


        </tr>
}
    </tbody>
</table>
